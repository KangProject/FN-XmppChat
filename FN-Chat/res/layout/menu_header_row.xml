    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#126389" >

        <TextView
            android:id="@+id/menu_header_tilte"
